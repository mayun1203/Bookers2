<%= render 'layouts/error', book: @book %>
<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class='col-md-3'>
    <%= render 'layouts/list', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <th><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></th>
            <th><%= link_to book_path(book.user) do %><%= book.title %><% end %></th>
            <th><%= book.body %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
