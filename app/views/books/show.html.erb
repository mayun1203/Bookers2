<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class='col-md-3'>
    <%= render 'layouts/list', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h1>Book detail</h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <td><%= link_to user_path(@user.id) do %><%= image_tag @user.get_profile_image(100,100) %><br>
                <%= @user.name %><% end %></td>
            <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
